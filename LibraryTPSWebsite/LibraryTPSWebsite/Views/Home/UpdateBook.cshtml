
@model LibraryTPSWebsite.ViewModel.UpdateBookViewModel
<div class="container text-center">
    @if (TempData["AlertMessage"] != null)
        {
        <div class="alert alert-warning w-100 alert-dismissible fade show mt-5" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        }
    <main class="form-signin w-100 d-flex justify-content-center align-items-center" style="margin-top:30px;">
        <form style=" background-color:#ebe8e8" class="form-signin p-5 mb-3" asp-action="UpdateBook" asp-controller="home" enctype="multipart/form-data" method="post">
            <h1 class="h3 mb-0 fw-bold text-primary">Update Book</h1>
            <h6 class="h3 mb-3 text-muted">Shelve: @ViewData["ShelveName"]</h6>
            <div class="form-floating mb-4">
                <input asp-for="@Model.BookName" type="text" class="form-control @(ViewData.ModelState["BookName"] != null && ViewData.ModelState["BookName"].Errors.Count> 0 ? "is-invalid": "" )" id="floatingInput" placeholder="Book Name">
                <label for="floatingInput">Book Name</label>
                <span asp-validation-for="BookName" class="text-start invalid-feedback"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Title" type="text" class="form-control @(ViewData.ModelState["Title"] != null && ViewData.ModelState["Title"].Errors.Count> 0 ? "is-invalid": "" )" id="floatingInput" placeholder="Book Descrption">
                <label for="floatingInput">Book Descrption</label>
                <span asp-validation-for="Title" class="text-start invalid-feedback"></span>
            </div>
            <div class="mb-3 mt-2">
                <label asp-for="formFile" class="text-start w-100 form-label">Upload your Image</label>
                <input class="form-control" type="file" accept="image/*" asp-for="formFile" id="formFile">
            </div>

            <button class="w-100 mb-2 btn btn-lg btn-primary" type="submit">Update</button>
            <a class="w-100 btn btn-lg btn-outline-secondary" asp-action="shelf" asp-controller="home">cancel</a>
        </form>
    </main>

</div>