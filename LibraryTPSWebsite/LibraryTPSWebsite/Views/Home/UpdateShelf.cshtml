@model LibraryTPSWebsite.ViewModel.UpdateShelfModel
<div class="container text-center ">
    @if (TempData["AlertMessage"] != null)
        {
        <div class="alert alert-warning w-100 alert-dismissible fade show mt-5" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        }
    <main class="form-signin w-100 d-flex justify-content-center align-items-center" style="margin-top:100px">
        <form class="form-signin" asp-action="UpdateShelf" asp-controller="home" enctype="multipart/form-data" method="post">
            <h1 class="h3 mb-5 fw-bold">Edit Shelf</h1>
            <div class="form-floating mb-4">
                <input asp-for="Name" type="text" class="form-control @(ViewData.ModelState["Name"] != null && ViewData.ModelState["Name"].Errors.Count> 0 ? "is-invalid": "" )" id="floatingInput" placeholder="Shelf Name">
                <label for="floatingInput">Shelf Name</label>
                <span asp-validation-for="Name" class="text-start invalid-feedback"></span>
            </div>
            <button class="w-100 mb-2 btn btn-lg btn-primary" type="submit">Update</button>
            <a class="w-100 btn btn-lg btn-outline-secondary" asp-action="shelf" asp-controller="home">cancel</a>
        </form>
    </main>

</div>